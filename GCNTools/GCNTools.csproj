<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>GCNTools</Title>
        <Authors>GCNTools contributors</Authors>
        <Description>GCNTools is a simple, platform-agnostic C# .NET library for working with GameCube discs, including reading, extracting, and creating disc images.</Description>
        <PackageProjectUrl>https://github.com/parhamgholami/GCNTools</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/parhamgholami/GCNTools</RepositoryUrl>
        <PackageTags>gamecube</PackageTags>
        <PackageReleaseNotes>Initial release</PackageReleaseNotes>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Copyright>Copyright © GCNTools contributors</Copyright>
        <Version>1.0.1</Version>
    </PropertyGroup>
	
	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="/" Visible="false" />
	</ItemGroup>
	
</Project>
